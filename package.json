{
  "name": "postit",
  "version": "1.0.0",
  "engines": {
    "node": "6.11.1"
  },
  "description": "a simple group broadcast messaging app ",
  "main": "app.js",
  "directories": {
    "test": "server/tests"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    }
  },
  "scripts": {
    "start:dev": "nodemon --exec babel-node ./server/bin/www",
    "both:dev": "concurrently \"npm start\" \"cd client && npm start\"",
    "build": "rimraf dist/ && babel ./server --out-dir server/dist/ --ignore ./node_modules,./.babelrc,./package.json,./npm-debug.log --copy-files",
    "start": "nodemon --exec babel-node ./server/bin/www",
    "test:dev": "mocha server/tests/tests.js -w --compilers js:babel-register",
    "test": "nyc --reporter=html --reporter=text mocha server/tests/tests.js --compilers js:babel-register",
    "eslint": "eslint --fix **/*.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "coveralls": "nyc --reporter=lcov --reporter=text-lcov npm test"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com/jattoabdul/andela-bootcamp-postit.git"
  },
  "keywords": [
    "postit",
    "messaging",
    "broadcasting",
    "react",
    "postgres",
    "sequelize",
    "andela",
    "bootcamp",
    "api",
    "backend",
    "server",
    "db",
    "node",
    "express",
    "mocha",
    "chai"
  ],
  "author": "Aminujatto Abdulqahhar <jattoade@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jattoabdul/andela-bootcamp-postit/issues"
  },
  "homepage": "https://github.com/jattoabdul/andela-bootcamp-postit#readme",
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.17.2",
    "chai": "^4.0.2",
    "chai-http": "^3.0.0",
    "cool-ascii-faces": "1.3.4",
    "crypto-js": "^3.1.9-1",
    "eslint": "^4.1.1",
    "express": "^4.15.3",
    "gulp": "^3.8.11",
    "gulp-bower": "0.0.10",
    "gulp-sass": "^3.1.0",
    "gulp-sourcemaps": "^1.3.0",
    "gulp-uglifyjs": "^0.6.0",
    "import-export": "^1.0.1",
    "istanbul": "^0.4.5",
    "jsonwebtoken": "^7.4.1",
    "mocha": "^3.4.2",
    "mocha-istanbul": "^0.3.0",
    "mocha-lcov-reporter": "^1.3.0",
    "morgan": "^1.8.2",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "npm": "^5.3.0",
    "nyc": "^11.0.3",
    "pg": "^6.4.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.3.1",
    "sequelize-cli": "^2.7.0",
    "sequelize-mocking": "^0.4.1",
    "sinon": "^2.3.6"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "coveralls": "^2.13.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "jshint": "^2.9.5",
    "lite-server": "^2.3.0",
    "mocha-sinon": "^2.0.0",
    "node-datetime": "^1.0.1",
    "supertest": "^3.0.0",
    "uglify-js": "^3.0.24"
  }
}
